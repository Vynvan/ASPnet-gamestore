@page "/"
@using Models

<PageTitle>Home</PageTitle>

<table class="table table-striped table-bordered table-hover">
   <thead class="table-dark">
      <th>Id</th>
      <th>Name</th>
      <th>Genre</th>
      <th>Price</th>
      <th>Release Date</th>
   </thead>
   <tbody>
      @foreach (var game in games)
      {
         <tr>
            <td>@game.Id</td>
            <td>@game.Name</td>
            <td>@game.Genre</td>
            <td>@game.Prize</td>
            <td>@game.ReleaseDate</td>
         </tr>
      }
   </tbody>
</table>

